{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./tests/**/*"]
}
